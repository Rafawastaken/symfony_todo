{% extends 'base.html.twig' %}

{% block title %}Symfony - Todo List
{% endblock %}

{% block body %}
	<div class="row mt-3">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<div class="d-flex justify-content-between align-items-center">

				<div class="display-5">{{page_title}}</div>

				<a href="{{path('add_task')}}" class="btn btn-primary mt-3">Add New</a>

			</div>
			<hr>
		</div>
		<div class="col-md-2"></div>
	</div>


	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<table class="table table-bordered table-striped text-center">
				<thead>
					<tr>
						<th>ID</th>
						<th>Task</th>
						<th>Completed</th>
						<th>Control</th>
					</tr>
				</thead>
				{% for task in tasks %}
					<tr class='align-middle fw-bold'>
						<td>{{task.id}}</td>
						<td>{{task.name}}</td>
						<td>
							{% if task.completed %}
								<span class="text-success">Completed</span>
							{% else %}
								<span class="text-danger">Uncompleted</span>
							{% endif %}
						</td>
						<td colspan="2">
							<div class="row">
								<div class="col-6">
									<a href="{{path('edit', {'id': task.id})}}" class="form-control btn btn-outline-primary">Edit</a>
								</div>
								<div class="col-6">
									<a href="{{path('delete', {'id': task.id})}}" class="form-control btn btn-outline-danger">Deleted</a>
								</div>
							</div>
						</td>
					</tr>
				{% endfor %}
			</table>
		</div>
		<div class="col-md-2"></div>
	</div>

{% endblock %}
